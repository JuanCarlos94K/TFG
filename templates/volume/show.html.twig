{% extends 'base.html.twig' %}

{% block title %}Volume{% endblock %}

{% block body %}
    <h1>Volúmenes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Número</th>
                <td>{{ volume.number }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ volume.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_volume_index') }}">Volver</a>

    <a href="{{ path('app_volume_edit', {'id': volume.id}) }}">Editar</a>

    {{ include('volume/_delete_form.html.twig') }}
{% endblock %}
