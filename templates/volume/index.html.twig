{% extends 'base.html.twig' %}

{% block title %}Volume index{% endblock %}

{% block body %}
    <h1>Volume index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for volume in volumes %}
            <tr>
                <td>{{ volume.id }}</td>
                <td>{{ volume.number }}</td>
                <td>{{ volume.description }}</td>
                <td>
                    <a href="{{ path('app_volume_show', {'id': volume.id}) }}">show</a>
                    <a href="{{ path('app_volume_edit', {'id': volume.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_volume_new') }}">Create new</a>
{% endblock %}
