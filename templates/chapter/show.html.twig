{% extends 'base.html.twig' %}

{% block title %}Chapter{% endblock %}

{% block body %}
    <h1>Chapter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chapter.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ chapter.number }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ chapter.slug }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ chapter.content }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ chapter.publishedAt ? chapter.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_chapter_index') }}">back to list</a>

    <a href="{{ path('app_chapter_edit', {'id': chapter.id}) }}">edit</a>

    {{ include('chapter/_delete_form.html.twig') }}
{% endblock %}
